<div class="container">
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-lg btn-default" %>
  <%= link_to "List all Categories", categories_path ,class: "btn btn-lg btn-default" %>
  <%= link_to "List all Ingredients", ingredients_path ,class: "btn btn-lg btn-default" %>
  <div>
    <h3>Search for Recipes</h3>
    <%= form_tag recipes_path, :method => 'get' do %>
    <div class="form-group col-md-12">
      <div class="col-md-10">
            <%= text_field_tag :search, params[:search], 
                                    placeholder: "Recipes", autofocus: true,
                                    class: 'form-control search-box input-lg' %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
           Search Recipe
      <% end %>
    </div>
    <% end %>
  </div>

  <%# @recipes.each do |recipe| %>
   <!-- <div><%#= image_tag recipe.image.url(:medium) %></div>
    <div><%#= link_to recipe.name, recipe %></div>
  <%# end %>-->

  <% @recipes.each_slice(3) do |recipes| %>
    <div class="row">
      <% recipes.each do |recipe| %>
        <div class="col-md-4">
          <div>
            <div>
              <%= link_to recipe do %>
                <div class="thumbnail">
                <%= image_tag recipe.image.url(:medium), class: "recipe_image"  %>
                <div class="caption">
                  <h3><%= link_to recipe.name, recipe %></h3>
                  <p>  <%= truncate recipe.description, length: 50 %> 
                        <%= link_to 'read more', recipe %> </p>
                  
                     <a href="#" class="btn btn-default" role="button">Button</a>
                
                     <a href="#" class="btn btn-default" role="button">Button</a>
                  </p>
                </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div> <!-- container close -->




