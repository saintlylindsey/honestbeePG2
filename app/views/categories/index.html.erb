<div class="container"> 
	<h1>Categories</h1>
	<div class="row">
	  <% @categories.each do |category| %>
	  <div class="col-md-4">
	  	<div class="thumbnail">
	    	<%= image_tag category.image.url(:medium), class: "recipe_image"  %>
	     	<div class="caption">
	      <%= link_to "#{category.name} :", category_path(category) %>
	      <%= pluralize(category.recipes.count, "recipe") %>
	      </div>
	     </div>
	   </div>
	  <% end %>
	</div>

	<p><%= link_to 'Back to index', :controller => 'recipes', :action => 'index' %></p>
</div>

